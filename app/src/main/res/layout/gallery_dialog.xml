<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="type"
            type="com.csimcik.gardeningBuddy.enums.ImageType" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/gallery_motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_top_rounded_white_background"
        android:paddingBottom="@dimen/padding_10dp"
        app:layoutDescription="@xml/gallery_dialog_scene">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:background="@drawable/border_top_rounded"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="@{type.string}"
            android:textColor="@color/light_background"
            android:textSize="@dimen/med_text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cancel_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/padding_10dp"
            android:tint="@color/dialog_cancel_button"
            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintEnd_toEndOf="@id/image_end"
            app:layout_constraintTop_toTopOf="@id/header"
            app:srcCompat="@drawable/x" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gallery_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/end_guide"
            app:layout_constraintStart_toStartOf="@id/start_guide"
            app:layout_constraintTop_toBottomOf="@id/header" />


        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/gallery_detail"
            android:layout_width="@dimen/plant_detail_thumb"
            android:layout_height="@dimen/plant_detail_thumb"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_10dp"
            android:background="@color/light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/end_guide"
            app:layout_constraintStart_toStartOf="@id/start_guide"
            app:layout_constraintTop_toBottomOf="@id/header"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/no_images_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/no_images"
            app:layout_constraintStart_toStartOf="@id/start_guide"
            app:layout_constraintEnd_toEndOf="@id/end_guide"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/image_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="25dp" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>