<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="family"
            type="com.csimcik.gardeningBuddy.models.entities.FamilyDB" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="@dimen/padding_10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/border"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="@{family.name}"
            android:maxLines="1"
            android:padding="15dp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/common_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:duplicateParentState="true"
            android:gravity="center"
            android:maxLines="1"
            android:padding="15dp"
            android:text="@{family.common_name.isEmpty() ? @string/not_available : family.common_name}"
            android:textColor="@{family.common_name.isEmpty() ? @color/light_gray : family.color}"
            android:style='@{family.common_name.isEmpty() ? "italic" : "bold"}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>